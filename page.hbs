{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <header>
        {{#if tags}}<div class="post-meta tags">Posted in {{tags}}</div>{{/if}}
        <h1 class="post-title">{{{title}}}</h1>
        <div class="post-meta"><time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="dddd, MMMM DD, YYYY"}}</time></div>
        </header>

        <section class="post-content">
            {{content}}
        </section>

        {{/post}}

        {{!> comments}}

    </article>

</main>
